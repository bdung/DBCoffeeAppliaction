<!--&lt;!&ndash;                    style="?android:attr/ratingBarStyleSmall" />&ndash;&gt;-->

            <TextView
                android:id="@+id/titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@+id/idImageView"

                android:text="Name coffee"
                android:textColor="@color/green_hint"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleName"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_marginEnd="203dp"

                android:layout_toEndOf="@+id/idImageView"
                android:text="Price coffee"
                android:textColor="@color/green_hint"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                    android:id="@+id/idAddNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:verticalScrollbarPosition="right"
                    android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"

                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_fav" />
            <ImageView
                android:id="@+id/idFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:verticalScrollbarPosition="right"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"

                android:importantForAccessibility="no"
                android:src="@drawable/ic_add" />




