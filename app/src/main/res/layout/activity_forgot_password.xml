<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginResgister.ForgotPassword">


    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="Forgot\nPassword"
        android:textColor="@color/green"
        android:textSize="@dimen/_40sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        app:ccp_defaultNameCode="VN"

        app:layout_constraintStart_toStartOf="@+id/forgot_password"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password"
        android:visibility="invisible"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/numberPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="@dimen/_10sdp"
        android:ems="10"
        android:textColor="@color/green"
        android:hint="Number phone"
        android:inputType="text"
        android:digits="0123456789"
        android:textColorHint="@color/green_hint"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/edittext_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idResetPassword"
        android:layout_width="match_parent"
        style=""
        android:layout_height="@dimen/_40sdp"
        android:text="Reset password"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberPhone" />

</androidx.constraintlayout.widget.ConstraintLayout>